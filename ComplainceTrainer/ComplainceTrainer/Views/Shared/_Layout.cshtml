@*This file provides a layout that is consistent throughout all pages.    
  It includes the navigation bar and the top header which displays the company
  name.*@

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Compliance Trainer</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")

</head>
@*This sets up the navigation to dislpay only items that each specific group should see.*@
<body>
    <div id="fullBody" class="container-fluid" style="display:none;">
        <div id="header">
            <a id="logo" href="@Url.Action("Index", "Home")"></a>
            <hr />
        </div>
        <div id="content">
            <div class="row">
                <div class="col-md-2" style="margin-right:-40px;">
                    <div class="container-fluid">
                        <div class="navbar navbar-fixed-left">
                            <ul class="nav navbar-nav nav-pills nav-stacked">
                                <li class="active navLink"><a href="@Url.Action("Index","Home")"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                                <li class="navLink"><a href="@Url.Action("MyTraining","Training")"><span class="glyphicon glyphicon-book"></span> Training</a></li>
                                <li class="navLink managers"><a href="@Url.Action("ManageEmployees", "Training")"><span class="glyphicon glyphicon-user"></span> Manage Employees</a></li>
                                <li class="navLink humanResources"><a href="@Url.Action("AllTraining", "Training")"><span class="glyphicon glyphicon-book"></span> Manage Training</a></li>

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-10">
                    <div id="content" ui-view="content">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - Compliance Trainer</p>
        </footer>
    </div>
    @Styles.Render("~/Content/DataTables/css")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/DataTables/js")
    @RenderSection("scripts", required: false)
    <link rel="stylesheet" type="text/css" href="~/Content/layout.css" />
</body>
</html>
